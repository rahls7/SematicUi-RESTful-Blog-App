<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form method="POST" action="/blog" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image url">
        </div>
        <div class="field">
            <label>Blog Text</label>
            <textarea name="blog[body]" placeholder="Blog Post goes here"></textarea>
        </div>
        <input type="submit" class="ui violet big basic button">
    </form>
</div>
<% include ./partials/footer %>